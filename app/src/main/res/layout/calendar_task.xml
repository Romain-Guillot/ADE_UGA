<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBetweenItemList"
        android:layout_marginLeft="@dimen/marginBoderScreen"
        android:layout_marginRight="@dimen/marginBoderScreen"
        android:padding="@dimen/task_padding">

    <TextView
            android:id="@+id/task_tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</LinearLayout>