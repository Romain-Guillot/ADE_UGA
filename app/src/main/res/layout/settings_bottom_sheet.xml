<?xml version="1.0" encoding="utf-8"?>
<!--
    Settings bottom sheet
-->
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/Widget.MaterialComponents.BottomSheet.Modal"
        android:id="@+id/settings_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="30dp"
        android:clickable="true"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"

        app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginBoderScreen"
            android:orientation="vertical">
        <TextView
                style="@style/title_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/settings"/>
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/settings_delete_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_delete_events"/>
        <Button
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:id="@+id/settings_delete_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_delete_tasks"/>
    </LinearLayout>




</LinearLayout>